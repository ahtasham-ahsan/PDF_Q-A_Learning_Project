{
  "compilerOptions": {
    "target": "ES2020", // ✅ Set at least ES2015 or higher
    "module": "ESNext", // ✅ Needed for top-level await
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true, // ✅ Optional: avoid issues in node_modules
    "strict": true
  },
  "include": ["./**/*.ts"]
}

